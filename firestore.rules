rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Helper: check if user is admin
    function isAdmin() {
      return isAuth() && request.auth.token.admin == true;
    }

    // Helper: check if user owns this document
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Users — read own profile, admins read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAdmin(); // created by backend on auth
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Events — all authenticated users can read, admins can write
    match /events/{eventId} {
      allow read: if isAuth();
      allow write: if isAdmin();

      // RSVPs — users can read own, create own, admins read all
      match /rsvps/{rsvpId} {
        allow read: if isAuth();
        allow create: if isAuth();
        allow update, delete: if isAdmin();
      }

      // Polaroids — all authenticated can read, admins write
      match /polaroids/{polaroidId} {
        allow read: if isAuth();
        allow write: if isAdmin();
      }

      // Quotes — all authenticated can read, admins write
      match /quotes/{quoteId} {
        allow read: if isAuth();
        allow write: if isAdmin();
      }
    }

    // Connections — users can read/create own, admins read all
    match /connections/{connectionId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Applications — anyone can create (prove yourself), admins manage
    match /applications/{applicationId} {
      allow create: if true; // public submission
      allow read, update, delete: if isAdmin();
    }

    // Vouch codes — authenticated users read own, admins manage
    match /vouch_codes/{codeId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // Admin users — only admins
    match /admin_users/{adminId} {
      allow read, write: if isAdmin();
    }

    // Settings — only admins
    match /settings/{settingId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Rate limits — backend manages, users can read own
    match /rate_limits/{limitId} {
      allow read, write: if isAuth();
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
