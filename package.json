{
  "name": "comeoffline",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@comeoffline/app",
    "dev:api": "turbo dev --filter=@comeoffline/api",
    "dev:admin": "turbo dev --filter=@comeoffline/admin",
    "dev:landing": "turbo dev --filter=@comeoffline/landing",
    "build": "turbo build --no-daemon",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "esbuild": "^0.27.3"
  }
}
